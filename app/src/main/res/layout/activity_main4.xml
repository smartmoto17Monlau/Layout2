<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:sc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkGrey"
    android:weightSum="100">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/Topbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="20">

        <ImageButton
            android:id="@+id/cambioIz"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/arrow2"
            android:layout_marginLeft="15dp"
            android:focusable="false"/>

        <ImageButton
            android:id="@+id/Menu"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/homeicon"
            android:layout_marginLeft="15dp"
            android:focusable="false"/>

        <TextClock
            android:id="@+id/textClock1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="285dp"
            android:textColor="#6dbf6b"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColorHighlight="@color/yelow"/>

        <ImageButton
            android:id="@+id/sos"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/sosbutton"
            android:layout_marginLeft="280dp"
            android:focusable="false"
            android:scaleX="0.9"
            android:scaleY="0.9"/>

        <ImageButton
            android:id="@+id/cambioDe"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/arrow"
            android:layout_marginLeft="15dp"
            android:focusable="false"/>


    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="20">

        <com.example.user.layout.canvas.Speedometer
            android:id="@+id/Speedometer"
            android:layout_width="match_parent"
            android:layout_height="930dp"
            android:background="@color/darkGrey"
            custom:currentSpeed="100"
            custom:maxSpeed="200"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp" />

    </LinearLayout>
</LinearLayout>
